{
  "title": "Keyd Port",
  "rules": [
    {
      "description": "Caps Lock → Control (hold) / Escape (tap)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "caps_lock" },
          "to": [{ "key_code": "left_control" }],
          "to_if_alone": [{ "key_code": "escape" }]
        }
      ]
    },
    {
      "description": "Control → Control (hold) / Escape (tap)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "left_control" },
          "to": [{ "key_code": "left_control" }],
          "to_if_alone": [{ "key_code": "escape" }]
        }
      ]
    },
    {
      "description": "Left Control → Control (hold) / Escape (tap)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "left_control" },
          "to": [{ "key_code": "left_control" }],
          "to_if_alone": [{ "key_code": "escape" }]
        }
      ]
    },
    {
      "description": "Left Meta (Command) → Command (hold) / Backspace (tap)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "left_command" },
          "to": [{ "key_code": "left_command" }],
          "to_if_alone": [{ "key_code": "delete_or_backspace" }]
        }
      ]
    },
    {
      "description": "Tab → Nav Layer (hold) / Tab (tap)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "tab" },
          "to": [{ "set_variable": { "name": "nav_layer", "value": 1 } }],
          "to_after_key_up": [
            { "set_variable": { "name": "nav_layer", "value": 0 } }
          ],
          "to_if_alone": [{ "key_code": "tab" }]
        }
      ]
    },
    {
      "description": "Nav Layer - Vim arrows (h/j/k/l)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "h" },
          "to": [{ "key_code": "left_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "j" },
          "to": [{ "key_code": "down_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "k" },
          "to": [{ "key_code": "up_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "l" },
          "to": [{ "key_code": "right_arrow" }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        }
      ]
    },
    {
      "description": "Nav Layer - Workspace switching (y/u/i/o → Opt+1/2/3/4)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "y" },
          "to": [{ "key_code": "4", "modifiers": ["left_option"] }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "u" },
          "to": [{ "key_code": "1", "modifiers": ["left_option"] }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "i" },
          "to": [{ "key_code": "2", "modifiers": ["left_option"] }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "o" },
          "to": [{ "key_code": "3", "modifiers": ["left_option"] }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        }
      ]
    },
    {
      "description": "Nav Layer - Page navigation (n/p/m/,/./)",
      "manipulators": [
        {
          "type": "basic",
          "from": { "key_code": "n" },
          "to": [{ "key_code": "page_down" }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "p" },
          "to": [{ "key_code": "page_up" }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "m" },
          "to": [{ "key_code": "home" }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "comma" },
          "to": [{ "key_code": "left_arrow", "modifiers": ["left_option"] }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "period" },
          "to": [{ "key_code": "right_arrow", "modifiers": ["left_option"] }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        },
        {
          "type": "basic",
          "from": { "key_code": "slash" },
          "to": [{ "key_code": "end" }],
          "conditions": [
            { "type": "variable_if", "name": "nav_layer", "value": 1 }
          ]
        }
      ]
    }
  ]
}
